---
import Layout from '../layouts/layout.astro';

const {frontmatter} = Astro.props;
---
<Layout title={ frontmatter.title }>
	<main class="prose lg:prose-xl p-7">
		<h1 class="text-kinsta-violet-dark">{ frontmatter.title }</h1>

		{frontmatter.image && (
			<img
				width={720}
				height={360}
				src={frontmatter.image}
				alt=""
			/>
		)}

		<slot />

		Author: { frontmatter.author }<br/>
		Published on: {new Date(frontmatter.date).toLocaleDateString('en-GB')}

		<ul>
		{ frontmatter.tags.map( tag => <li>{ tag }</li> ) }
		</ul>
	</main>
</Layout>
